---
import profile from '@/content/profile.json';

const socials = [
  { href: profile.contact.github, label: 'GitHub' },
  { href: profile.contact.x, label: 'X' },
  { href: profile.contact.linkedin, label: 'LinkedIn' }
];
---

<footer class="border-t border-neutral-200 py-10">
  <div class="container-base flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
    <p class="text-sm text-neutral-600">Â© {new Date().getFullYear()} {profile.name}</p>
    <div class="flex items-center gap-4 text-sm">
      {socials.map((social) => (
        <a href={social.href} target="_blank" rel="noreferrer" aria-label={social.label} class="text-neutral-600 transition hover:text-accent">{social.label}</a>
      ))}
    </div>
  </div>
</footer>
